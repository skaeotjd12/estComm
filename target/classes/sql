
CREATE TABLE TBL_MEMBER_M(                               
  MBR_SQ INT AUTO_INCREMENT NOT NULL PRIMARY KEY,                 
  MBR_NICKNM VARCHAR(50) UNIQUE key,                          
  MBR_ID VARCHAR(50) UNIQUE key,                       
  MBR_PW VARCHAR(255),                                    
  MBR_EMAIL VARCHAR(50),                                  
  MBR_ADDR VARCHAR(50),
  MBR_NM VARCHAR(50),
  MBR_JIN_DT TIMESTAMP DEFAULT now(),
  MVR_EMAIL_RECEIV_YN CHAR(1),
  MBR_PROFILE_IMAGE_URL VARCHAR(100),
  MBR_MESS_CERTIFI_YN CHAR(1) DEFAULT 'N',
  MBR_SECESS_YN CHAR(1) DEFAULT 'N',
  MBR_PHONENUM VARCHAR(50),
  MBR_SCL_YN CHAR(1),
  MBR_SCL_DIV VARCHAR(50),
  MBR_ROL VARCHAR(50),
  MBR_MDFY_DT TIMESTAMP DEFAULT now()
);

create table TBL_BOARD_M (
   BRD_SQ INT auto_increment PRIMARY KEY,
   MBR_SQ INT,
   BRD_TTL VARCHAR(255),
   BRD_CONT VARCHAR(255),
   BRD_DEL_YN CHAR(1) DEFAULT 'N',
   BRD_RECMMND_CNT INT DEFAULT '0',
   BRD_VW_CNT INT DEFAULT '0',
   BRD_SLT_YN CHAR(1) DEFAULT 'N',
   BRD_DIV_CD VARCHAR(50),
   BRD_NOTI_DIV_CD CHAR(1) DEFAULT 'N',
   BRD_SLT_DIV_CD VARCHAR(3) DEFAULT 'WFR',
   BRD_REGIST_DTM TIMESTAMP DEFAULT NOW(),
   BRD_MDFY_DTM TIMESTAMP
);


